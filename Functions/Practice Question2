//Decimal to any Base:-
import java.util.*;

public class Main{
    
public static void main(String[] args){
    Scanner scn = new Scanner(System.in);
    int n = scn.nextInt();
    int x = scn.nextInt();
    int Ans = DectoBase(n,x);
    System.out.println(Ans);
}

public static int DectoBase(int n,int x){
    int rv = 0;
    int p = 1;
    while(n>0){
        int dig = n % x;
        rv = rv + dig*p;
        p = p * 10;
        n = n/x;
    }
    return rv;
}
}
